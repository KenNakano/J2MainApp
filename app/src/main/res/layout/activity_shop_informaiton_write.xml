<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopInformaitonWrite">


    <Button
        android:id="@+id/ShopTopButton"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:text="トップ"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bezyu"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:text="店舗基本情報編集画面"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/ShopNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="店名" />

        <EditText
            android:id="@+id/WriteShopNameContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:ems="5"
            android:hint="店名" />

        <TextView
            android:id="@+id/ShopAreaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="エリア" />

        <EditText
            android:id="@+id/WriteShopAreaContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:inputType="text"
            android:ems="5"
            android:hint="○○駅"  />

        <TextView
            android:id="@+id/ShopPhoneTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="電話番号" />

        <EditText
            android:id="@+id/WriteShopPhoneContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:inputType="phone"
            android:ems="5"
            android:hint="080-××××-○○○○" />


        <TextView
            android:id="@+id/ShopMemoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="補足情報" />

        <EditText
            android:id="@+id/WriteShopMemoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:paddingBottom="60dp"
            android:inputType="text"
            android:ems="5"
            android:hint="補足情報"  />

        <Button
            android:id="@+id/WrittenShopFinishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="編集完了"
            app:backgroundTint="@color/red" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>