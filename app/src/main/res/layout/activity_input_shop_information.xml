<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputShopInformation">

    <Button
        android:id="@+id/ShopTopButton"
        android:layout_width="79dp"
        android:layout_height="41dp"
        android:text="トップ"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.009"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBEF84"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="100dp"
            android:text="店舗基本情報画面"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/ShopNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="店名" />

        <TextView
            android:id="@+id/ShopNameContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#ffffff"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:text="○○店"
             />

        <TextView
            android:id="@+id/ShopAreaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="エリア" />

        <TextView
            android:id="@+id/ShopAreaContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:text="○○駅近く"
         />

        <TextView
            android:id="@+id/ShopPhoneTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="電話番号" />

        <TextView
            android:id="@+id/ShopPhoneContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:background="#ffffff"
            android:text="080-796-888"
             />


        <TextView
            android:id="@+id/ShopMemoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="備考" />

        <TextView
            android:id="@+id/ShopMemoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#ffffff"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:text="備考"
            android:paddingBottom="60dp" />

        <Button
            android:id="@+id/WriteShopFinishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="編集" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>