<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Top">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="411dp"
        android:layout_height="143dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/roet5fkv" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:fontFamily="sans-serif"
        android:text="200 points"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="391dp"
        android:layout_height="95dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/RequestConfirmButton"
            android:layout_width="80dp"
            android:layout_height="84dp"
            android:text="手伝う"
            app:backgroundTint="@color/koibrown" />

        <Button
            android:id="@+id/ReceiveConfirmButton"
            android:layout_width="80dp"
            android:layout_height="84dp"
            android:text="頼む"
            app:backgroundTint="@color/pink" />

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="84dp"
            app:backgroundTint="@color/red"
            app:icon="@android:drawable/ic_menu_add" />

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="84dp"
            android:text="My"
            app:backgroundTint="@color/brown" />

        <Button
            android:id="@+id/ShopListButton"
            android:layout_width="80dp"
            android:layout_height="84dp"
            app:icon="@drawable/ic_baseline_storefront_24" />

    </LinearLayout>

    <ListView
        android:id="@+id/topList"
        android:layout_width="340dp"
        android:layout_height="368dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619">

    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>